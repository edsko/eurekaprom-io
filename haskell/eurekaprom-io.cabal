cabal-version:      3.0
name:               eurekaprom-io
version:            0.1.0
synopsis:           Interface to the EurekaPROM in IO mode
license:            BSD-3-Clause
license-file:       LICENSE
author:             Edsko de Vries
maintainer:         edsko@well-typed.com
build-type:         Simple
extra-doc-files:    CHANGELOG.md

common lang
  build-depends:    base >= 4.16 && < 5
  default-language: GHC2021

  default-extensions:
      DataKinds
      DefaultSignatures
      DerivingStrategies
      DisambiguateRecordFields
      TypeFamilies
      UndecidableInstances

  ghc-options:
      -Wall
      -Wprepositive-qualified-module
      -Wunused-packages

library
  import:           lang
  hs-source-dirs:   src
  exposed-modules:  EurekaPROM.IO

  other-extensions:
      TemplateHaskell
      OverloadedLabels

  other-modules:
      EurekaPROM.IO.ALSA
      EurekaPROM.IO.Discovery
      EurekaPROM.IO.Listen
      EurekaPROM.IO.MIDI

  build-depends:
    , alsa-seq  >= 0.6 && < 0.7
    , midi      >= 0.2 && < 0.3
    , midi-alsa >= 0.2 && < 0.3
    , optics    >= 0.4 && < 0.5

executable eurekaprom-io-listen
  import:         lang
  main-is:        Listen.hs
  ghc-options:    -main-is Listen
  hs-source-dirs: listen
  build-depends:  eurekaprom-io

  other-modules:
      Listen.Cmdline

  build-depends:
      optparse-applicative >= 0.18 && < 0.19

test-suite eurekaprom-io-test
  import:         lang
  type:           exitcode-stdio-1.0
  main-is:        Test.hs
  ghc-options:    -main-is Test
  hs-source-dirs: test
--  build-depends:  eurekaprom-io
